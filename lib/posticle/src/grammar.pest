url_domain = _{
    (!("/" | "?" | "&" | "#" | space | terminator+ ~ (space | EOI)) ~ ANY)+
}

url_tail = _{
    ("/" | ("?" | "&" | "#") ~ !(space | EOI))
    ~ (!(space | terminator+ ~ (space | EOI)) ~ ANY)*
}

terminator = _{
    "(" | ")" | "?" | "!" | "*" | "'" | ";" | ":" | "=" | "," | "." | "$" | "%" | "[" | "]"
    | "~" | "&" | "|" | "@" | "\"" | "<" | ">"
}

